#include <stdio.h>

int main() {

    /*
    * Carta 1 - Declaração das variáveis
    * Variáveis para armazenar os dados da segunda carta do jogo Super Trunfo.
    * Os valores dentro do [50] e [5] são tamanhos máximos para strings.
    */
    char estado1;
    char codigo1[5];
    char nome1[50];
    int populacao1;
    float area1;
    float pib1;
    int pontos1;

    /*
    * Carta 2 - Declaração das variáveis
    * Variáveis para armazenar os dados da segunda carta do jogo Super Trunfo.
    * Os valores dentro do [50] e [5] são tamanhos máximos para strings.
    */
    char estado2;
    char codigo2[5];
    char nome2[50];
    int populacao2;
    float area2;
    float pib2;
    int pontos2;

    /*
     * Entrada dos dados da Carta 1 
     * Aqui serão coletados os dados necessários para a primeira carta do jogo Super Trunfo.
     */
    
    printf("=== Cadastro da Carta 1 ===\n");

    printf("Estado (A-H): ");
    scanf(" %c", &estado1);

    printf("Codigo da carta (ex: A01): ");
    scanf("%s", codigo1);

    printf("Nome da cidade: ");
    getchar(); // limpa buffer do Enter e resolve o problema do fgets pulando a entrada
    fgets(nome1, 50, stdin); 

    printf("Populacao: ");
    scanf("%d", &populacao1);

    printf("Area (km2): ");
    scanf("%f", &area1);

    printf("PIB (em bilhoes): ");
    scanf("%f", &pib1);

    printf("Numero de pontos turisticos: ");
    scanf("%d", &pontos1);

    /*
     * Entrada dos dados da Carta 2 
     * Aqui serão coletados os dados necessários para a primeira carta do jogo Super Trunfo.
     */
    
    printf("\n=== Cadastro da Carta 2 ===\n");

    printf("Estado (A-H): ");
    scanf(" %c", &estado2);

    printf("Codigo da carta (ex: B02): ");
    scanf("%s", codigo2);

    printf("Nome da cidade: ");
    getchar(); // limpa buffer do Enter e resolve o problema do fgets pulando a entrada
    fgets(nome2, 50, stdin);

    printf("Populacao: ");
    scanf("%d", &populacao2);

    printf("Area (km2): ");
    scanf("%f", &area2);

    printf("PIB (em bilhoes): ");
    scanf("%f", &pib2);

    printf("Numero de pontos turisticos: ");
    scanf("%d", &pontos2);

    /*
    * Saída dos dados das Cartas (Exibição).
    * Aqui serão exibidos os dados coletados para ambas as cartas do jogo Super Trunfo. 
    */

    printf("\n\n===== CARTA 1 =====\n");
    printf("Estado: %c\n", estado1);
    printf("Codigo: %s\n", codigo1);
    printf("Nome da Cidade: %s", nome1);
    printf("Populacao: %d\n", populacao1);
    printf("Area: %.2f km²\n", area1);
    printf("PIB: %.2f bilhoes de reais\n", pib1);
    printf("Numero de Pontos Turisticos: %d\n", pontos1);

    printf("\n===== CARTA 2 =====\n");
    printf("Estado: %c\n", estado2);
    printf("Codigo: %s\n", codigo2);
    printf("Nome da Cidade: %s", nome2);
    printf("Populacao: %d\n", populacao2);
    printf("Area: %.2f km²\n", area2);
    printf("PIB: %.2f bilhoes de reais\n", pib2);
    printf("Numero de Pontos Turisticos: %d\n", pontos2);

    return 0;
}
